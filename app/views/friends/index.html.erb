<p style="color: green"><%= notice %></p>

<% if user_signed_in? %>
<h1>Friend List</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
  <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
    <tr>
      <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
      <td> <%= friend.last_name %></td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.twitter %></td>
      <td><%= friend.user_id %></td>
      
    </tr>
    <% end %>
  <% end %>
</tbody>
</table>

<br>

<%= link_to "New friend", new_friend_path %>

<% else %>

<h1>Homepage</h1>

<% end %>



